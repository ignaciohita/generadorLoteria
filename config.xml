<?xml version='1.0' encoding='utf-8' ?>
<widget id="pro.hita.generadorInformes" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Generador de Lotería</name>
    <description>Ejemplo del libro: un sistema sencillo que genera combinaciones aleatorias para lotería</description>
    <author email="ignaciohita@gmail.com" href="http://www.hita.pro">Jose Ignacio Hita Barraza</author>
    <content src="index.html" />

    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-installLocation" value="auto" />


    <icon src="www/img/icon/icon144x144.png" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="www/img/icon/icon36x36.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="www/img/icon/icon48x48.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="www/img/icon/icon72x72.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="www/img/icon/icon96x96.png" />
    <icon gap:platform="ios" height="57" width="57" src="www/img/icon/icon57x57.png" />
    <icon gap:platform="ios" height="72" width="72" src="www/img/icon/icon72x72.png" />
    <icon gap:platform="ios" height="114" width="114" src="www/img/icon/icon57x57.png" />
    <icon gap:platform="ios" height="144" width="144" src="www/img/icon/icon72x72.png" />
